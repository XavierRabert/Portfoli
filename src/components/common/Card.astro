---
import { main } from "@/data/ca.json";
import Social from "@/components/common/Social.astro";
---

<div
  class="right-0 absolute block w-2/5 p-4 bg-x-blue border-r-0 rounded-r-none rounded-lg text-x-dark-blue dark:bg-gray-800 dark:border-gray-700"
>
  <div class="flex flex-col">
    <h5
      class="text-2xl font-bold tracking-tight text-x-dark-blue dark:text-white"
    >
      {main.card.title}
    </h5>
    <div class="flex justify-between">
      <p class="font-normal text-gray-700 dark:text-gray-400">
        {main.card.text}
      </p>
      <Social />
    </div>
  </div>
</div>
