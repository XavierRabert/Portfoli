---
import type { experienceDetails } from "@/types/types";

interface Props {
  experience: experienceDetails;
}

const { experience } = Astro.props;
---

<div class="mb-3">
  <h3 class="text-xl text-x-blue">
    {experience.name}
  </h3>
  <h4>
    {experience.company}
  </h4>
  <h4>
    {experience.years}
  </h4>
  <div class="mx-1 my-2">
    {experience.text.map((text) => <p class="pt-1">- {text}</p>)}
  </div>
</div>
