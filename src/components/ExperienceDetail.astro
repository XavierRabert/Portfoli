---
import type { experienceDetails } from "@/types/types";

interface Props {
  experience: experienceDetails;
}

const { experience } = Astro.props;
---

<div class="mb-3">
  <h3 class="text-xl text-x-blue">
    {experience.name}
  </h3>
  <div class="mx-1 my-2">
    {
      experience.text.map((text) => {
        const htmlText = `- ${text}`;
        return <p set:html={htmlText} />;
      })
    }
  </div>
</div>
